# Discord Bot設定
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_server_id_here

# Supabase設定
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API認証
API_AUTH_TOKEN=your_secure_random_token_here

# サーバー設定
PORT=3000
NODE_ENV=production

# CORS設定（カンマ区切りで複数指定可能、未設定の場合は全て許可）
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Discord Role IDs
DISCORD_LEADER_ROLE_ID=your_leader_role_id_here
DISCORD_MEMBER_ROLE_ID=your_member_role_id_here
DISCORD_OB_ROLE_ID=your_ob_role_id_here
DISCORD_JH_ROLE_ID=your_jh_role_id_here
DISCORD_H_ROLE_ID=your_h_role_id_here
DISCORD_VERIFIED_ROLE_ID=your_verified_role_id_here
